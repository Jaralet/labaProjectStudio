<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Изображение товара -->
        <ImageView
            android:id="@+id/cart_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Изображение товара"
            android:src="@android:drawable/ic_menu_gallery" />

        <!-- Название товара -->
        <TextView
            android:id="@+id/cart_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Название товара"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cart_item_image"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Цена за штуку -->
        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1000$ за шт."
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="@+id/cart_item_title"
            app:layout_constraintStart_toStartOf="@+id/cart_item_title"
            app:layout_constraintTop_toBottomOf="@+id/cart_item_title" />

        <!-- Общая цена -->
        <TextView
            android:id="@+id/cart_item_total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Всего: 1000$"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/cart_item_title"
            app:layout_constraintStart_toStartOf="@+id/cart_item_title"
            app:layout_constraintTop_toBottomOf="@+id/cart_item_price" />

        <!-- Управление количеством -->
        <LinearLayout
            android:id="@+id/quantity_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@+id/cart_item_title"
            app:layout_constraintTop_toBottomOf="@+id/cart_item_total_price"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Кнопка уменьшения -->
            <ImageButton
                android:id="@+id/btn_decrease_quantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Уменьшить количество"
                android:src="@android:drawable/ic_media_previous"
                app:tint="?attr/colorPrimary" />

            <!-- Количество -->
            <TextView
                android:id="@+id/cart_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:text="1"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold" />

            <!-- Кнопка увеличения -->
            <ImageButton
                android:id="@+id/btn_increase_quantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Увеличить количество"
                android:src="@android:drawable/ic_media_next"
                app:tint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Кнопка удаления -->
        <ImageButton
            android:id="@+id/btn_remove_from_cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Удалить из корзины"
            android:src="@android:drawable/ic_menu_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/holo_red_dark" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>